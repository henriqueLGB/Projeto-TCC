<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - billaNutri</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/billaNutri.styles.css" asp-append-version="true" />
</head>
<body>
    <header> <!-- ínicio header-->
        <nav class="navbar navbar-expand-sm navbar-light bg-default"><!-- Ínicio-->
            <!-- Logo-->
            <a href="index.html" class="navbar-brand"><!-- Ínicio-->
                <img src="img/logo.png" width="80">
            </a><!-- Fim-->

            <!-- Toggle-->
            <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal"><!-- ínicio-->
                <span class="navbar-toggler-icon"></span>
            </button><!-- Fim-->

            <!-- Navegação-->
            <div class="collapse navbar-collapse nav-magin-left" id="nav-principal"><!-- ínicio div-->
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                    <a href="index.html" class="nav-link" >Home</a>
                  </li>
                  <li class="nav-item">
                    <a href="index.html" class="nav-link" >Recursos</a>
                  </li>
                  <li class="nav-item">
                    <a href="index.html" class="nav-link" >Serviços</a>
                  </li>
                  <li class="nav-item">
                      <a href="index.html" class="nav-link" >Preços</a>
                    </li>
                    <li class="nav-item">
                      <a href="chatbox_acesso.html" class="btn btn-outline-dark ml-4" >
                          Entrar
                      </a>
                    </li>
                </ul>
            </div><!-- Fim div-->
        </nav><!--Fim-->
    </header><!-- Fim header-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - billaNutri - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
